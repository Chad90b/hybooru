{
	"name": "boilerplate",
	"description": "Boilerplate: Typescript, Webpack, Isomorphic React, Sass, Handlebars, Semantic UI",
	"version": "2.0.0",
	"main": "server.ts",
	"author": "Fun Maker",
	"repository": "https://github.com/funmaker/webapp-boilerplate",
	"scripts": {
		"start": "rm -rf build && webpack --config webpack/server.dev.babel.js",
		"start:prod": "cd dist && npm start",
		"build:prod": "mkdir -p dist && npm-run-all build:prod-*",
		"build:prod-server": "webpack --config webpack/server.babel.js",
		"build:prod-client": "webpack --config webpack/client.babel.js",
		"build:prod-static": "cp -r static dist/",
		"build:prod-package": "babel-node webpack/package.babel.js",
		"lint": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx --max-warnings 0 --ignore-path .gitignore .",
		"lint-fix": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx --ignore-path .gitignore . --fix"
	},
	"dependencies": {
		"axios": "^0.20.0",
		"body-parser": "^1.19.0",
		"chalk": "latest",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.5",
		"detect-node": "^2.0.4",
		"express": "^4.17.1",
		"express-handlebars": "^5.1.0",
		"express-promise-router": "^4.0.1",
		"morgan": "^1.10.0",
		"prop-types": "^15.7.2",
		"query-string": "^6.13.2",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-hot-loader": "^4.12.21",
		"react-router": "^5.2.0",
		"react-router-dom": "^5.2.0",
		"resize-observer-polyfill": "^1.5.1",
		"semantic-ui-less": "^2.4.1",
		"semantic-ui-react": "^1.2.1",
		"source-map-support": "^0.5.19"
	},
	"devDependencies": {
		"@babel/core": "^7.11.6",
		"@babel/node": "^7.10.5",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-proposal-decorators": "^7.10.5",
		"@babel/plugin-proposal-object-rest-spread": "^7.11.0",
		"@babel/polyfill": "^7.11.5",
		"@babel/preset-env": "^7.11.5",
		"@babel/preset-react": "^7.10.4",
		"@babel/register": "^7.11.5",
		"@hot-loader/react-dom": "^16.13.0",
		"@types/body-parser": "^1.19.0",
		"@types/compression": "^1.7.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/detect-node": "^2.0.0",
		"@types/express": "^4.17.8",
		"@types/morgan": "^1.9.1",
		"@types/node": "^14.11.1",
		"@types/react": "^16.9.49",
		"@types/react-dom": "^16.9.8",
		"@types/react-router": "^5.1.8",
		"@types/react-router-dom": "^5.1.5",
		"@types/webpack": "^4.41.22",
		"@types/webpack-dev-middleware": "^3.7.2",
		"@types/webpack-env": "^1.15.3",
		"@types/webpack-hot-middleware": "^2.25.3",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"babel-loader": "^8.1.0",
		"css-loader": "^4.3.0",
		"eslint": "^7.9.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-indent-empty-lines": "^1.0.1",
		"eslint-plugin-react": "^7.20.6",
		"eslint-plugin-react-hooks": "^4.1.2",
		"handlebars": "^4.7.6",
		"handlebars-loader": "^1.7.1",
		"ignore-loader": "^0.1.2",
		"less": "^3.12.2",
		"less-loader": "^7.0.1",
		"mini-css-extract-plugin": "^0.11.2",
		"node-sass": "^4.14.1",
		"npm-run-all": "^4.1.5",
		"sass-loader": "^10.0.2",
		"start-server-webpack-plugin": "^2.2.5",
		"style-loader": "^1.2.1",
		"ts-loader": "^8.0.3",
		"typescript": "^4.0.3",
		"webpack": "^4.44.2",
		"webpack-cli": "^3.3.12",
		"webpack-dev-middleware": "^3.7.2",
		"webpack-hot-middleware": "^2.25.0",
		"webpack-node-externals": "^2.5.2"
	}
}
